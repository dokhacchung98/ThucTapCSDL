@model IList<TeacherManagement.DTOs.GiaoVienGiangDayDTO>
@{
    var selectListSchoolYear = ViewBag.SelectListSchoolYear as List<SelectListItem>;
}
@if (Model == null || Model.Count == 0)
{
    <tr>
        <td class="tg-0lax" colspan="7" style="text-align:center;">không có dữ liệu</td>
    </tr>
}
else
{
    int i = 1;
    foreach (var item in Model)
    {
        <tr>
            <td>@i</td>
            <td><a href="@Url.Action("XemChiTietThamGiaGiangDay","TBGiaoVien", new { @id = item.Ma })" style="color:#000000;">@(item.TenHocPhan != null ? item.TenHocPhan : "")</a></td>
            <td style="text-align:center;">@(item.SoTinChi)</td>
            <td>@(item.TenLoaiDoiTuongDaoTao != null ? item.TenLoaiDoiTuongDaoTao : "")</td>
            <td style="text-align:center;">@(item.SoTietDay)</td>
            <td style="text-align:center;">@(item.TongTiet)</td>
            <td>@(item.NamHoc != null ? item.NamHoc : "")</td>
        </tr>
        i++;
    }
}

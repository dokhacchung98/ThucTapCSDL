                    <th scope="col">Năm cấp bằng</th>
                    <th scope="col">Nơi đào tạo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in giaoVienThacSiDTO)
                {
                    <tr>
                        <th>@item.ThacSyChuyenNganh</th>
                        <th>@item.TenLuanVan</th>
                        <th>@Html.FormatDateTime2Date(item.NamCapBang)</th>
                        <td>@item.NoiDaoTao</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="form-group">
        <label class="label">Tên luận văn: </label>
        <input type="text" class="form-control" name="LuanVan" />
    </div>

    <div class="form-group">
        <label class="label">Thạc sĩ chuyên ngành: </label>
        <input type="text" class="form-control" name="Nganh" />
    </div>

    <div class="form-group">
        <label class="label">Nơi đào tạo: </label>
        <input type="text" class="form-control" name="NoiDaoTao" />
    </div>

    <div class="form-group">
        <label class="label">Năm cấp bằng: </label>
        <input type="text" class="form-control" name="NamCB" />
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm" />
    </div>
}


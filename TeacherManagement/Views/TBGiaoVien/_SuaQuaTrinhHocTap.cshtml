@model TeacherManagement.Models.TBGiaoVien
@using TeacherManagement.DTOs
@using TeacherManagement.Helpers


@{
    List<GiaoVienDaiHocDTO> giaoVienDaiHocDTO = ViewBag.LayThongTinDaiHoc;
    List<GiaoVienThacSiDTO> giaoVienThacSiDTO = ViewBag.LayThongTinThacSi;
    List<GiaoVienTienSiDTO> giaoVienTienSiDTO = ViewBag.LayThongTinTienSi;
    List<GiaoVienTrinhDoNgoaiNguDTO> giaoVienTrinhDoNgoaiNguDTOs = ViewBag.LayThongTinNgoaiNgu;
}

@using (Html.BeginForm("ThemGiaoVienDaiHoc", "TBGiaoVien", new { @maGV = Model.MaGV }, FormMethod.Post))
{
    <div class="title-part">I. Đại học</div>
    if (giaoVienDaiHocDTO != null)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Ngành học</th>
                    <th scope="col">Hệ đào tạo</th>
                    <th scope="col">Năm tốt nghiệp</th>
                    <th scope="col">Nơi đào tạo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in giaoVienDaiHocDTO)
                {
                    <tr>
                        <td>@item.NganhHoc</td>
                        <td>@item.HeDaoTao</td>
                        <td>@Html.FormatDateTime2Date(@item.NamTotNghiep)</td>
                        <td>@item.NoiDaoTao</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="form-group">
        <label class="label">Ngành học: </label>
        <input type="text" class="form-control" name="NganhDaiHoc" />
    </div>

    <div class="form-group">
        <label class="label">Hệ đào tạo: </label>
        <input type="text" class="form-control" name="HeDaiHoc" />
    </div>

    <div class="form-group">
        <label class="label">Nơi đào tạo: </label>
        <input type="text" class="form-control" name="NoiDaiHoc" />
    </div>

    <div class="form-group">
        <label class="label">Nước đào tạo: </label>
        <input type="text" class="form-control" name="NuocDaiHoc" />
    </div>

    <div class="form-group">
        <label class="label">Năm tốt nghiệp: </label>
        <input type="text" class="form-control" name="NamTotNghiep" />
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm" />
    </div>
}

@using (Html.BeginForm("ThemGiaoVienThacSi", "TBGiaoVien", new { @maGV = Model.MaGV }, FormMethod.Post))
{
    <div class="title-part">II. Thạc sĩ</div>

@model TeacherManagement.Models.TBGiaoVien

    <head>
        <link rel="stylesheet" type="text/css" href="~/Assets/css/detail.css" />
        <link href="~/Content/style-table.css" rel="stylesheet" />
    </head>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Quản Lý Giáo Viên</a>
        </li>
        <li class="breadcrumb-item">Thông Tin Giáo Viên</li>
        <li class="breadcrumb-item active">@Model.TenGV</li>
    </ol>
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">Thông Tin Giáo Viên</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu1">Quá Trình Học Tâp</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu2">Tham Gia Hội Đồng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu3">Tham Gia Hướng Dẫn</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu4">Tham Gia Giảng Dạy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu5">Tham Gia Công Tác Khác</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu6">Nghiên Cứu Khoa Học</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="home" class="container tab-pane active">
            @Html.Action("ThongTinGiaoVien", new { @id = Model.MaGV })
        </div>
        <div id="menu1" class="container tab-pane fade">
            @Html.Action("QuaTrinhHocTap", new { @id = Model.MaGV })
        </div>
        <div id="menu2" class="container tab-pane fade">
            @Html.Action("ThamGiaHoatDong", new { @id = Model.MaGV })
        </div>
        <div id="menu3" class="container tab-pane fade">
            @Html.Action("ThamGiaHuongDan", new { @id = Model.MaGV })
        </div>
        <div id="menu4" class="container tab-pane fade">
            @Html.Action("ThamGiaGiangDay", new { @id = Model.MaGV })
        </div>
        <div id="menu5" class="container tab-pane fade">
            @Html.Action("ThamGiaCongTacKhac", new { @id = Model.MaGV })
        </div>
        <div id="menu6" class="container tab-pane fade">
            @Html.Action("CongTacNghienCuuKH", new { @id = Model.MaGV })
        </div>
    </div>
</div>
@model TeacherManagement.Models.TBGiaoVien

<head>
    <link rel="stylesheet" type="text/css" href="~/Assets/css/detail.css" />
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/select2.min.js"></script>

</head>
<script>
    $(document).ready(function () {
        $("#success-alert").hide();

        $("#faild-alert").hide();
    });

    function showAlertFail() {
        $("#faild-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#faild-alert").slideUp(500);
        });
    };

    function showAlertSuccess() {
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
    };

</script>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Quản Lý Giáo Viên</a>
        </li>
        <li class="breadcrumb-item">Sửa Thông Tin Giáo Viên</li>
        <li class="breadcrumb-item active">@Model.TenGV</li>
    </ol>
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">Thông Tin Giáo Viên</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu1">Quá Trình Học Tâp</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu2">Tham Gia Hội Đồng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu3">Tham Gia Hướng Dẫn</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu4">Tham Gia Giảng Dạy</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu5">Tham Gia Công Tác Khác</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="home" class="container tab-pane active">
            @Html.Action("SuaThongTinGiaoVien", new { @id = Model.MaGV })
        </div>
        <div id="menu1" class="container tab-pane active">
            @Html.Action("SuaQuaTrinhHocTap", new { @id = Model.MaGV })
        </div>
        <div id="menu2" class="container tab-pane active">
            @Html.Action("SuaQuaTrinhThamGiaHoiDong", new { @id = Model.MaGV })
        </div>
        <div id="menu3" class="container tab-pane active">
            @Html.Action("SuaQuaTrinhHuongDan", new { @id = Model.MaGV })
        </div>
        <div id="menu4" class="container tab-pane active">
            @Html.Action("SuaQuaTrinhHocTap", new { @id = Model.MaGV })
        </div>
        <div id="menu5" class="container tab-pane active">
            @Html.Action("SuaQuaTrinhHocTap", new { @id = Model.MaGV })
        </div>
    </div>
</div>
<div class="alert alert-success" id="success-alert" style="position:fixed; right: 20px; top: 70px;">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <strong>Success! </strong>
    Bạn đã thêm thành công
</div><div class="alert alert-danger" id="faild-alert" style="position:fixed; right: 20px; top: 70px;">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <strong>Failed! </strong>
    Bạn đã thêm thất bại
</div>